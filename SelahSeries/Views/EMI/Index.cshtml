<!--================Event Area =================-->
@if (events.Any())
{
<section class="event_area p_120">
    <div class="container">
        <div class="main_title">
            <h2>Upcoming Events</h2>
            <p>Emerald Light Initiative <br /> Keep in touch with our events and projects</p>
        </div>
        <div class="event_slider owl-carousel">
            @foreach (var item in events)
            {
                <div class="item">
                    <div class="event_item">
                        <div class="media">
                            <div class="d-flex event-image">
                                <img src="~/Uploads/@Html.DisplayFor(modelItem => item.ImgUrl)" alt="">
                            </div>
                            <div class="media-body">
                                <a>@Html.DisplayFor(modelItem => item.Time)</a>
                                <a a href="~/emeraldlight/event/@Html.DisplayFor(modelItem => item.EventId)"><h4>@Html.DisplayFor(modelItem => item.Title)</h4></a>
                                <p class="line-clamp">@Html.DisplayFor(modelItem => item.Description)</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
}
<!--================End Event Area =================-->
<!--================Testimonials Area =================-->
@if (testimonies.Any())
{
<section class="testimonials_area p_120">
    <div class="container">
        <div class="row testimonials_inner">
            <div class="col-lg-4">
                <div class="testi_left_text">
                    <h4>Testimonials</h4>
                    <p>Read Testimonials of women who have been impacted through this platform.</p>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="testi_slider owl-carousel">

                    @foreach (var item in testimonies)
                    {
                        <div class="item">
                            <div class="testi_item">
                                <img src="~/Uploads/@Html.DisplayFor(modelItem => item.ImgUrl)" width="80" height="80" border-radius="50%" alt="">
                                <p>@Html.DisplayFor(modelItem => item.Description)</p>
                                <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</section>
}
